<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="pl.swmind.robust.sioc.model">
    <class
        name="UserAccount"
        table="users"
        batch-size="10">

        <id
            name="uriFromBigInt"
            type="java.lang.Long"
            column="userid"
            />

        <property
            name="created"
            type="java.util.Date"
            column="joindate"
            />

        <property
            name="accountName"
            type="string"
            column="username"
            />

        <property
            name="title"
            type="string"
            column="usertitle"
            />

    </class>
</hibernate-mapping>