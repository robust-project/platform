  <modelVersion>4.0.0</modelVersion>
  <groupId>uk.ac.soton.itinnovation.robust.cat</groupId>
  <artifactId>robust-cat-core-components-viewEngine-impl-catUIExternalWidgetSets</artifactId>
  <packaging>jar</packaging>
  
