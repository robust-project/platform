<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <context:component-scan base-package="uk.ac.soton.itinnovation.robust"/>
    
    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
    
    <import resource="classpath:META-INF/spring/jpa-boards-context.xml"/>

    <bean id="propertyPlaceholder" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="locations">
            <list>
                <value>classpath:boardsie-ds.properties</value>
                <value>classpath:boardsie-uri.properties</value>
            </list>
        </property>
    </bean>
    
    <!-- Spring manage ServiceBean -->
    <bean id="predictorServiceImpl" class="uk.ac.soton.itinnovation.robust.ps.impl.PredictorServiceImpl" autowire="byType" />

    <!-- JAX-WS Service Endpoint -->
    <jaxws:endpoint id="predictorService" implementor="#predictorServiceImpl" address="/service" />
    
</beans>